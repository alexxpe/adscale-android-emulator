{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./instructions",
        "./output"
      ]
    },
    "shell": {
      "command": "npx",
      "args": ["-y", "mcp-shell"],
      "env": {
        "ALLOWED_COMMANDS": "adb,emulator,avdmanager,node,npx,pnpm"
      }
    }
  }
}
